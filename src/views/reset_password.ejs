

<div class="container">
    <div class="row justify-content-center">
        <div class="card p-4" style="width: 60vw;">

            <form method="post" action="/forget-password/reset">
                
                <input type="text" name="token" value="<%= locals.token %>" hidden>

                 <!-- Password input -->
                 <div class="form-outline mb-4">
                    <input type="password" name="password" id="password" class="form-control" />
                    <label class="form-label" for="password">New Password</label>
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                    <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" />
                    <label class="form-label" for="confirmPassword">Confirm New Password</label>
                </div>

                <!-- Submit button -->
                <div class="text-center">
                    <button type="submit" class="btn-lg btn-primary btn-block mb-4">Change Password</button>
                </div>

            </form>
        </div>
    </div>
</div>